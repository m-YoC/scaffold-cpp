.DEFAULT_GOAL := help

entrance: ## Usage of compile.sh
	@echo "----------------------------------------------------------------------------------"
	@echo "< コンパイルの仕方 >"
	@echo "./compile.sh <.cpp target file> [-r|-f|-d <arg>|-v|-g]"
	@echo "    -fオプションがない限りファイルは検索され，パスが自動的に設定されます．"
	@echo "    同名ファイルが複数存在する場合ファイルが一意に特定できず，コンパイルに失敗します．"
	@echo "    固有の名前を付けるようにしてください．あるいは-dオプションでディレクトリを指定してください．"
	@echo "-r: コンパイル後実行します"
	@echo "-f: ファイルをパス込みで指定します"
	@echo "-d: ファイル探索時に経由したいディレクトリ名を指定します"
	@echo "-v,-g: コンパイラのオプションです"
	@echo "----------------------------------------------------------------------------------"

hello: ## hello world test
	./compile.sh hello -r 

help: ## Display this help screen.
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk -F ':.*?## ' '{printf "\033[36m%-20s\033[0m %s\n", $$1, $$2}'
